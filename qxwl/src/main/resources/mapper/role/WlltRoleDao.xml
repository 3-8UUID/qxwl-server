<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wllt.qxwl.modules.role.dao.WlltRoleDao">

    <resultMap type="com.wllt.qxwl.modules.role.entity.WlltRole" id="WlltRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="purview" column="purview" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WlltRoleMap">
        select
          id, user_id, role, purview
        from qxwl_dev.wllt_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WlltRoleMap">
        select
          id, user_id, role, purview
        from qxwl_dev.wllt_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WlltRoleMap">
        select
          id, user_id, role, purview
        from qxwl_dev.wllt_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="purview != null and purview != ''">
                and purview = #{purview}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into qxwl_dev.wllt_role(user_id, role, purview)
        values (#{userId}, #{role}, #{purview})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update qxwl_dev.wllt_role
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
            <if test="purview != null and purview != ''">
                purview = #{purview},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from qxwl_dev.wllt_role where id = #{id}
    </delete>

</mapper>